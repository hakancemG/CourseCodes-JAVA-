// For döngüsüyle bir dizinin elemanlarını ekrana basma yöntemi.

package hkndeneme;  // Hakan Cem Gerçek

public class Proje001 {
    public static void main(String[] args) {         
        String[] array = new String[4];
        array[0]="Bakambu";
        array[1]="Tete";
        array[2]="Zaha";
        array[3]="Icardi";
        System.out.println("----- 1st way to print the array -----");
        for(int i=0; i<array.length; i++){
            System.out.println(array[i]);
        }
        System.out.println("----- 2nd way to print the array -----");
        for(String arrayLabel : array){
            System.out.println(arrayLabel);
        }
    }
}
