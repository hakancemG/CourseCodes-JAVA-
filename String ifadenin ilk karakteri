// String ifadenin ilk karakteri.

package hkndeneme;  // Hakan Cem Gerçek

import java.util.Scanner;

public class Proje001 {
    public static void main(String[] args) {         
        
        Scanner keyboard = new Scanner(System.in);
        
        System.out.println("Please enter your message here:");
        
        String message = keyboard.nextLine();
        
        System.out.println(message.startsWith("H"));    //ilk indisten itibaren H ile başlıyorsa true
        System.out.println(message.startsWith("Ha",3)); //3. indisten " " "
        
        
        
    } 
}
