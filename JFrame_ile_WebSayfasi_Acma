    private void Button1ActionPerformed(java.awt.event.ActionEvent evt) {                                        
        try {
            // TODO add your handling code here:
            /*say++;
            System.out.println("Butona "+say+" kez tiklandı.");*/
            String internet_adresi=web_textField.getText();
            //Text field'dan aldığımız metni bir değişkende tuttuk.
            Desktop d = Desktop.getDesktop();
            //Masaüstünde bir dosya oluşturacağımız için Desktop class'nı kullandık.
            try {
                d.browse(new URI(internet_adresi));
                // Desktop class'ı türünden bir değişken ile browse metoduna eriştik.
                // Bu metoda internet adresimizi yolladık.
            } catch (IOException ex) {
                Logger.getLogger(WebSayfasi.class.getName()).log(Level.SEVERE, null, ex);
            }
        } catch (URISyntaxException ex) {
            Logger.getLogger(WebSayfasi.class.getName()).log(Level.SEVERE, null, ex);
        }
        
    }                                       

