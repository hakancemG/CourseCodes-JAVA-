//Metotlar 1: split() metodu.

package hkndeneme;  // Hakan Cem Gerçek
import java.util.Scanner;
public class Proje001{
    
    public static void main(String[] args){
        Scanner keyboard = new Scanner(System.in);
        System.out.println("Metninizi giriniz: ");
        String metin = keyboard.nextLine();
        //ilgili metot içn call işlemi.
        splitMetodu(metin);
   }
    //ilgili metot.
    public static void splitMetodu(String parametre1){
        String[] splitMetin = parametre1.split(" ");
        for(String str : splitMetin){
            System.out.print(str + " | ");
        }
        
    }
}
