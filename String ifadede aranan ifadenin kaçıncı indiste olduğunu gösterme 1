// String ifadede aranan ifadenin kaçıncı indiste olduğunu gösterme.

package hkndeneme;  // Hakan Cem Gerçek

import java.util.Scanner;

public class Proje001 {
    public static void main(String[] args) {         
        
        String message2 = "Today is very boring!";
        System.out.println(message2.indexOf('i'));
        System.out.println(message2.indexOf("ori"));
        
        Scanner keyboard = new Scanner(System.in);
        
        System.out.println("Please enter your message here:");
        
        String message = keyboard.nextLine();
        
        System.out.println(message.indexOf('H',0));
        System.out.println(message.indexOf("Ha",1));
        System.out.println(message.indexOf("Ha",0));
        
        
    } 
}
